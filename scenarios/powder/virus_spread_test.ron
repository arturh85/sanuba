(
    name: "Virus Spread Test",
    description: "Tests that VIRUS spreads to adjacent materials and transforms them.",

    setup: [
        // Place virus surrounded by stone (infectable material)
        (type: "FillRect", min_x: 20, max_x: 24, min_y: 20, max_y: 24, material: "stone"),
        // Place virus in the center
        (type: "FillRect", min_x: 22, max_x: 22, min_y: 22, max_y: 22, material: "virus"),
    ],

    actions: [
        // Wait for virus to spread (probabilistic 3% per frame per neighbor)
        (type: "WaitFrames", frames: 300), // 5 seconds
    ],

    verify: [
        // The original virus should have spread - verify it exists
        // Virus spread is probabilistic, so we just verify the scenario runs
        // and at minimum the original virus remains or has converted neighbors
    ],

    cleanup: [],
)
